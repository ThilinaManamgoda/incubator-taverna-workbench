<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="AdvancedImageRenderer" class="org.apache.taverna.renderers.impl.AdvancedImageRenderer" />
	<bean id="HexBinaryRenderer" class="org.apache.taverna.renderers.impl.HexBinaryRenderer" />
	<bean id="TextRenderer" class="org.apache.taverna.renderers.impl.TextRenderer" />
	<bean id="TextRtfRenderer" class="org.apache.taverna.renderers.impl.TextRtfRenderer" />
	<bean id="TextXMLRenderer" class="org.apache.taverna.renderers.impl.TextXMLRenderer" />

	<bean id="RendererRegistry" class="org.apache.taverna.renderers.impl.RendererRegistryImpl">
			<property name="renderers" ref="renderers" />
	</bean>


</beans>
